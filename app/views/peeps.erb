
<div class="container">
  <div class="text-center col-md-4 offset-md-4">
    <h1 class="display-4">chitter.</h1>
  </div>

  <% if !current_user %>
    <div class="text-center col-md-6 offset-3">
      <h4><a href="/sessions/new">Login</a> to post your first peep!</h4>
    </div>
  <% end %>
    <% if current_user %>
    <div class="text-center col-md-8 offset-md-2">
      <h3> Hello, <%= current_user.username %>! </h3>
    </div>
    <div class="col-md-6 offset-md-3">
      <form action="/peeps" method="post">
        <textarea name="peep"></textarea>
        <div style="margin-bottom:35px;">
          <input style="float:right;" type="submit" value="Peep!">
        </div>
      </form>
    </div>
    <% end %>

  <% if flash[:goodbye] %>
  <%= "Goodbye, #{flash[:goodbye]}!" %>
  <% end %>

  <div id="all-peeps" class="col-md-6 offset-md-3">
    <% @peeps.each do |peep| %>
      <div class="each-peep"> <%= peep.text %> <span class="added-info"><%= peep.added.strftime("%I:%M %p %d/%m/%y") %> by <a href="/<%=peep.user.username%>"><%= peep.user.username %></a></span> </div>
    <% end %>
  </div>
</div>
